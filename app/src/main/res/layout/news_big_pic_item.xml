<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/news_title"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/news_title_text_size"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/news_margin_top"/>
    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/news_margin_top"
        android:src="@drawable/beauty"/>
    <TextView
        android:id="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/news_time_text_size"
        android:textColor="@color/gray"
        android:text="2017-10-11"
        android:layout_marginTop="@dimen/news_margin_top"
        android:layout_marginBottom="@dimen/news_margin_bottom"
        />

</LinearLayout>