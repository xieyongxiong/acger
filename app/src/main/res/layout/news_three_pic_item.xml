<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/news_title"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:layout_marginTop="@dimen/news_margin_top"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/news_title_text_size"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/news_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/beauty"/>
        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/beauty"/>
        <ImageView
            android:id="@+id/news_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/beauty"/>
    </LinearLayout>
    <TextView
        android:id="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_margin_top"
        android:text="2017-11-11"
        android:textSize="@dimen/news_time_text_size"
        android:layout_marginBottom="@dimen/news_margin_bottom"
        android:textColor="@color/gray"/>

</LinearLayout>